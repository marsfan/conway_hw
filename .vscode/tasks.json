    "version": "2.0.0",
    "tasks": [
        {
            "label": "vsg-check",
            "type": "shell",
            "command": "vsg -f \"${relativeFile}\" -c vhdl/vsg.json -ap",
            "problemMatcher": {
                "owner": "vsg",
                "fileLocation": [
                    "autoDetect",
                    "${workspaceFolder}"
                ],
                "pattern": [
                    {
                        "regexp": "^File:  ([^\\s]*)\\s*$",
                        "file": 1
                    },
                    {
                        "regexp": "^.*$"
                    },
                    {
                        "regexp": "^.*$"
                    },
                    {
                        "regexp": "^.*$"
                    },
                    {
                        "regexp": "^.*$"
                    },
                    {
                        "regexp": "^.*$"
                    },
                    {
                        "regexp": "^.*$"
                    },
                    {
                        "regexp": "^.*$"
                    },
                    {
                        "regexp": "^.*$"
                    },
                    {
                        "regexp": "^.*$"
                    },
                    {
                        "regexp": "^  ([^\\s]*_\\d*)\\s*. ([^\\s]*)\\s*.\\s*([^\\s]*) . (.*)$",
                        "code": 1,
                        "severity": 2,
                        "location": 3,
                        "message": 4,
                        "loop": true
                    }
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "vsg-fix",
            "type": "shell",
            "command": "vsg -f \"${relativeFile}\" --fix -c vhdl/vsg.json",
            "problemMatcher": {
                "owner": "vsg",
                "fileLocation": [
                    "autoDetect",
                    "${workspaceFolder}"
                ],
                "pattern": [
                    {
                        "regexp": "^File:  ([^\\s]*)\\s*$",
                        "file": 1
                    },
                    {
                        "regexp": "^.*$"
                    },
                    {
                        "regexp": "^.*$"
                    },
                    {
                        "regexp": "^.*$"
                    },
                    {
                        "regexp": "^.*$"
                    },
                    {
                        "regexp": "^.*$"
                    },
                    {
                        "regexp": "^.*$"
                    },
                    {
                        "regexp": "^.*$"
                    },
                    {
                        "regexp": "^.*$"
                    },
                    {
                        "regexp": "^.*$"
                    },
                    {
                        "regexp": "^  ([^\\s]*_\\d*)\\s*. ([^\\s]*)\\s*.\\s*([^\\s]*) . (.*)$",
                        "code": 1,
                        "severity": 2,
                        "location": 3,
                        "message": 4,
                        "loop": true
                    }
                ]
            }
        }
    ]
}